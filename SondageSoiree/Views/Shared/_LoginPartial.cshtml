@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Compte", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {

    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Bonjour " + User.Identity.GetUserName()  +  " !", "ModifierCompte",
    "Compte", routeValues: new { id = Int32.Parse(User.Identity.GetUserId()) }, htmlAttributes:  new { @class = "" })</li>
        <li>@Html.ActionLink("Se déconnecter", "LogOff", "Compte")</li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("S’inscrire", "CreerCompte", "Compte")</li>
        <li>@Html.ActionLink("Se connecter", "Login", "Compte")</li>
    </ul>
}
